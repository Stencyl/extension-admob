<?xml version="1.0" encoding="UTF-8"?>
<blocks>
    
    <!-- Events -->
    
    <block tag="event-mobile-ads"
           type="event"
           returns="void"
           category="events"
           helpURL="event-mobile">
        <code>
            <event-def
                listener="addListener(com.stencyl.admob.AdMob.get().adEvent, ${eventRef});"
                params="adEvent:com.stencyl.admob.AdMob.AdEventData"
                condition="#0"
                innerCode="#1"  />
        </code>
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@event.mobile.ads.viewed" code="Type.enumEq(adEvent, AdEvent(BANNER, OPENED))" />
                    <c text="@event.mobile.ads.closed" code="Type.enumEq(adEvent, AdEvent(BANNER, CLOSED))" />
                    <c text="@event.mobile.ads.loaded" code="Type.enumEq(adEvent, AdEvent(BANNER, LOADED))" />
                    <c text="@event.mobile.ads.failed" code="Type.enumEq(adEvent, AdEvent(BANNER, FAILED_TO_LOAD))" />
                    <c text="@event.mobile.ads.clicked" code="Type.enumEq(adEvent, AdEvent(BANNER, CLICKED))" />
                    <c text="@event.mobile.fullads.viewed" code="Type.enumEq(adEvent, AdEvent(INTERSTITIAL, OPENED))" />
                    <c text="@event.mobile.fullads.closed" code="Type.enumEq(adEvent, AdEvent(INTERSTITIAL, CLOSED))" />
                    <c text="@event.mobile.fullads.loaded" code="Type.enumEq(adEvent, AdEvent(INTERSTITIAL, LOADED))" />
                    <c text="@event.mobile.fullads.failed" code="Type.enumEq(adEvent, AdEvent(INTERSTITIAL, FAILED_TO_LOAD))" />
                    <c text="@event.mobile.fullads.clicked" code="Type.enumEq(adEvent, AdEvent(INTERSTITIAL, CLICKED))" />
                </choices>
            </dropdown>
            <code-block order="1" />
        </fields>
        <context>
            <innerContext type="class" value="com.stencyl.behavior.Script" />
        </context>
    </block>
    
    <!-- Core blocks -->
    
    <dropdown id="topbottom">
        <choices>
            <c text="@bottom" code="0" />
            <c text="@top" code="1" />
        </choices>
    </dropdown>

    <block tag="admob-initialize2"
           code="com.stencyl.admob.AdMob.init(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0" id="topbottom" />
        </fields>
    </block>
    
    <block tag="admob-show-hide-banner"
           code="com.stencyl.admob.AdMob.~Banner();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@show" code="show" />
                    <c text="@hide" code="hide" />
                </choices>
            </dropdown>
        </fields>
    </block>
    
    <block tag="admob-show-fullscreen"
           code="com.stencyl.admob.AdMob.~Interstitial();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@load" code="load" />
                    <c text="@show" code="show" />
                </choices>
            </dropdown>
        </fields>
    </block>
    
    <block tag="admob-reinit-banner"
           code="com.stencyl.admob.AdMob.onResize();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
        </fields>
    </block>
    
    <block tag="admob-setbanner-position"
           code="com.stencyl.admob.AdMob.setBannerPosition(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0" id="topbottom" />
        </fields>
    </block>

    <block tag="admob-setPrivacyURL"
           code="com.stencyl.admob.AdMob.setPrivacyURL(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <text order="0" />
        </fields>
    </block>
	
    <block tag="admob-showConsentForm"
           code="com.stencyl.admob.AdMob.showConsentForm(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@consent-check-existing" code="true" />
                    <c text="@consent-always-show" code="false" />
                </choices>
            </dropdown>
        </fields>
    </block>

    <block tag="iad-height"
           code="(Engine.landscape ? 32 : 50)"
           type="normal"
           returns="int"
           category="mobile"
           helpURL="game-mobile">
    </block>

    <!-- deprecated blocks -->

    <block tag="admob-initialize"
           code="com.stencyl.admob.AdMob.init(#1);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <text order="0" />
            <dropdown order="1" id="topbottom" />
        </fields>
    </block>

    <block tag="iad-load-show"
           code="~MobileAd();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@block.load" code="loadFull" />
                    <c text="@block.show" code="showFull" />
                </choices>
            </dropdown>
        </fields>
        <context>
            <requiredContext type="staticimport" value="com.stencyl.behavior.Script" />
        </context>
    </block>

    <block tag="iad-show-hide"
           code="~MobileAd();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@block.hide" code="hide" />
                    <c text="@block.show" code="show" />
                </choices>
            </dropdown>
        </fields>
        <context>
            <requiredContext type="staticimport" value="com.stencyl.behavior.Script" />
        </context>
    </block>
    
</blocks>
