<?xml version="1.0" encoding="UTF-8"?>
<blocks>
    
    <!-- Core blocks -->
    
    <dropdown id="topbottom">
        <choices>
            <c text="@bottom" code="0" />
            <c text="@top" code="1" />
        </choices>
    </dropdown>

    <block tag="admob-initialize2"
           code="com.stencyl.admob.AdMob.init(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0" id="topbottom" />
        </fields>
    </block>
    
    <block tag="admob-show-hide-banner"
           code="com.stencyl.admob.AdMob.~Banner();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@show" code="show" />
                    <c text="@hide" code="hide" />
                </choices>
            </dropdown>
        </fields>
    </block>
    
    <block tag="admob-show-fullscreen"
           code="com.stencyl.admob.AdMob.~Interstitial();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@load" code="load" />
                    <c text="@show" code="show" />
                </choices>
            </dropdown>
        </fields>
    </block>
    
    <block tag="admob-reinit-banner"
           code="com.stencyl.admob.AdMob.onResize();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
        </fields>
    </block>
    
    <block tag="admob-setbanner-position"
           code="com.stencyl.admob.AdMob.setBannerPosition(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0" id="topbottom" />
        </fields>
    </block>

    <block tag="admob-setPrivacyURL"
           code="com.stencyl.admob.AdMob.setPrivacyURL(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <text order="0" />
        </fields>
    </block>
	
    <block tag="admob-showConsentForm"
           code="com.stencyl.admob.AdMob.showConsentForm(~);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@consent-check-existing" code="true" />
                    <c text="@consent-always-show" code="false" />
                </choices>
            </dropdown>
        </fields>
    </block>

    <block tag="iad-height"
           code="(Engine.landscape ? 32 : 50)"
           type="normal"
           returns="int"
           category="mobile"
           helpURL="game-mobile">
    </block>

    <!-- deprecated blocks -->

    <block tag="admob-initialize"
           code="com.stencyl.admob.AdMob.init(#1);"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <text order="0" />
            <dropdown order="1" id="topbottom" />
        </fields>
    </block>

    <block tag="iad-load-show"
           code="~MobileAd();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@block.load" code="loadFull" />
                    <c text="@block.show" code="showFull" />
                </choices>
            </dropdown>
        </fields>
        <context>
            <requiredContext type="staticimport" value="com.stencyl.behavior.Script" />
        </context>
    </block>

    <block tag="iad-show-hide"
           code="~MobileAd();"
           type="action"
           returns="void"
           category="mobile"
           helpURL="game-mobile"
           hidden="true"
           deprecated="true">
        <fields>
            <dropdown order="0">
                <choices>
                    <c text="@block.hide" code="hide" />
                    <c text="@block.show" code="show" />
                </choices>
            </dropdown>
        </fields>
        <context>
            <requiredContext type="staticimport" value="com.stencyl.behavior.Script" />
        </context>
    </block>
    
</blocks>
